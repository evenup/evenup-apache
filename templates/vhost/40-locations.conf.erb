<%  if scope.lookupvar('locations').is_a? Array -%>
    # Additional Locations
<%      scope.lookupvar('locations').each do |location| -%>

    <Location <%= location['name'] %>>
<%        location['params'].each do |param| -%>
        <%= param %>
<%        end -%>
<%        if scope.lookupvar('rewrite_to_https') -%>
        Header edit Location ^http://(.*)$ https://$1
<%        end -%>
    </Location>
<%      end -%>
<%  end -%>
